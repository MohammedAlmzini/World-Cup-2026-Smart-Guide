<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldCup2026SmartGuide" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

        <!-- Other colors -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.WorldCup.BottomNavigationView</item>

        <!-- Card View -->
        <item name="materialCardViewStyle">@style/Widget.WorldCup.CardView</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.WorldCup.Button</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.WorldCup.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.WorldCup.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.WorldCup.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.WorldCup.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.WorldCup.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.WorldCup.Caption</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.WorldCup2026SmartGuide.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color matching toolbar -->
        <item name="android:statusBarColor">@color/secondary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Main Activity Theme with Custom Status Bar -->
    <style name="Theme.WorldCup2026SmartGuide.MainActivity" parent="Theme.WorldCup2026SmartGuide.NoActionBar">
        <!-- Status bar color matching toolbar -->
        <item name="android:statusBarColor">@color/secondary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Make status bar solid to match toolbar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Content goes under status bar -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.WorldCup2026SmartGuide.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.WorldCup2026SmartGuide</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.WorldCup.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.WorldCup.BottomNavigationView</item>
    </style>

    <style name="Widget.WorldCup.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.WorldCup.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.WorldCup.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.WorldCup.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Theme Overlays -->
    <style name="ThemeOverlay.WorldCup.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.WorldCup" parent="TextAppearance.Material3.BodyMedium" />
    <style name="TextAppearance.WorldCup.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WorldCup.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WorldCup.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WorldCup.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.WorldCup.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.WorldCup.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Event Status Styles -->
    <style name="TextAppearance.WorldCup.EventStatus" parent="TextAppearance.Material3.BodySmall" />
    <style name="TextAppearance.WorldCup.EventStatus.Live">
        <item name="android:textColor">@color/status_live</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WorldCup.EventStatus.Upcoming">
        <item name="android:textColor">@color/status_upcoming</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.WorldCup.EventStatus.Ended">
        <item name="android:textColor">@color/status_ended</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Rating Styles -->
    <style name="TextAppearance.WorldCup.Rating">
        <item name="android:textColor">@color/rating_star</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Countdown Styles -->
    <style name="TextAppearance.WorldCup.Countdown">
        <item name="android:textColor">@color/world_cup_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>
    
    <!-- Countdown Value Styles -->
    <style name="TextAppearance.WorldCup.CountdownValue">
        <item name="android:textColor">@color/world_cup_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
    <!-- Countdown Label Styles -->
    <style name="TextAppearance.WorldCup.CountdownLabel">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.WorldCup.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.WorldCup.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.WorldCup.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.WorldCup.Headline3</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <!-- Tab Layout -->
    <style name="Widget.WorldCup.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Toolbar Title Text Style -->
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Modern Card Style -->
    <style name="ModernCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E8E8E8</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>

</resources>