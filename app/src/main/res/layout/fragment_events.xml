<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.events.EventsFragment">

    <!-- Swipe Refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <!-- Featured Event Section -->
                <LinearLayout
                    android:id="@+id/featured_event_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/background"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/events_featured"
                        android:textAppearance="?attr/textAppearanceHeadline3"
                        android:textColor="@color/on_background"
                        android:layout_marginBottom="12dp" />

                    <!-- Featured Event Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/featured_event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="12dp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="2dp"
                        app:rippleColor="@color/primary_light">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Event Image with Overlay -->
                            <FrameLayout
                                android:id="@+id/featured_image_container"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/featured_event_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_event"
                                    android:background="@drawable/bg_featured_event_image" />

                                <!-- Gradient Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_featured_gradient" />

                                <!-- Featured Badge -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|start"
                                    android:layout_margin="16dp"
                                    android:background="@drawable/bg_featured_badge"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="6dp"
                                    android:text="⭐ فعالية مميزة"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <!-- Event Title Overlay -->
                                <TextView
                                    android:id="@+id/featured_event_title"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="20dp"
                                    android:text="فعالية مميزة"
                                    android:textAppearance="?attr/textAppearanceHeadline4"
                                    android:textColor="@color/white"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:shadowColor="#80000000"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="4"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                            </FrameLayout>

                            <!-- Event Content -->
                            <LinearLayout
                                android:id="@+id/featured_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                app:layout_constraintTop_toBottomOf="@id/featured_image_container">

                                <!-- Event Description -->
                                <TextView
                                    android:id="@+id/featured_event_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="وصف الفعالية المميزة"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textColor="@color/on_surface"
                                    android:textSize="14sp"
                                    android:lineSpacingExtra="4dp"
                                    android:layout_marginBottom="16dp"
                                    android:maxLines="3"
                                    android:ellipsize="end" />

                                <!-- Event Details Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="12dp">

                                    <!-- Date -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_calendar"
                                            android:layout_marginEnd="8dp"
                                            android:tint="@color/primary" />

                                        <TextView
                                            android:id="@+id/featured_event_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="التاريخ"
                                            android:textAppearance="?attr/textAppearanceBody2"
                                            android:textColor="@color/on_surface_variant"
                                            android:textSize="13sp" />

                                    </LinearLayout>

                                    <!-- Location -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/ic_location"
                                            android:layout_marginEnd="8dp"
                                            android:tint="@color/primary" />

                                        <TextView
                                            android:id="@+id/featured_event_location"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="الموقع"
                                            android:textAppearance="?attr/textAppearanceBody2"
                                            android:textColor="@color/on_surface_variant"
                                            android:textSize="13sp"
                                            android:maxLines="1"
                                            android:ellipsize="end" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Action Button -->
                                <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:text="عرض التفاصيل"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    app:icon="@drawable/ic_arrow_forward"
                                    app:iconTint="@color/white"
                                    app:iconSize="16dp"
                                    app:cornerRadius="20dp"
                                    app:backgroundTint="@color/primary"
                                    style="@style/Widget.Material3.Button" />

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:visibility="gone" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_events"
                        android:alpha="0.5"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/empty_state_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/events_no_results"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:textColor="@color/on_background"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/empty_state_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/events_no_results_message"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/on_background"
                        android:alpha="0.7"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Other Events Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/events_other"
                            android:textAppearance="?attr/textAppearanceHeadline3"
                            android:textColor="@color/on_background" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/filter_button"
                            style="@style/Widget.Material3.Button.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/events_filter_title"
                            android:textColor="@color/primary"
                            app:icon="@drawable/ic_filter"
                            app:iconTint="@color/primary"
                            app:strokeColor="@color/primary"
                            app:strokeWidth="2dp" />

                    </LinearLayout>

                    <!-- Other Events List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/events_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_event_compact" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>