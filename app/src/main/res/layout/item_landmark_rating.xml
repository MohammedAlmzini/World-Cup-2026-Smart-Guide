<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_landmark_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="اسم المعلم"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="برج خليفة" />

            <RatingBar
                android:id="@+id/rating_bar_overall"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:isIndicator="true"
                android:progressTint="@color/secondary_variant"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/text_rating_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_variant"
                android:layout_marginStart="4dp"
                tools:text="4.5" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="وصف المعلم"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            tools:text="معلم سياحي رائع يستحق الزيارة مع العائلة والأصدقاء" />

        <!-- Quick Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المدة"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="2-3 ساعات" />

            </LinearLayout>

            <!-- Best Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_day"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/text_best_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أفضل وقت"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="المساء" />

            </LinearLayout>

        </LinearLayout>

        <!-- Highlights -->
        <TextView
            android:id="@+id/text_highlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="النقاط المميزة"
            android:textSize="12sp"
            android:textColor="@color/secondary_variant"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:text="• إطلالة رائعة • مطاعم متنوعة • مواقف سيارات" />

        <!-- Footer Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="التاريخ"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                tools:text="2024-01-15" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_view"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_view"
                    android:contentDescription="عرض"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="تعديل"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_delete"
                    android:contentDescription="حذف"
                    android:tint="@android:color/holo_red_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
