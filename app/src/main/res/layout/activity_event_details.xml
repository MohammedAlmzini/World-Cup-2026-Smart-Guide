<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.admin.EventDetailsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/primary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Hero Image -->
            <ImageView
                android:id="@+id/iv_hero_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_event"
                app:layout_collapseMode="parallax" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <!-- Featured Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_featured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:text="@string/events_featured_badge"
                android:textColor="@color/white"
                android:visibility="gone"
                app:chipBackgroundColor="@color/primary"
                app:chipCornerRadius="16dp"
                app:chipIcon="@drawable/ic_star"
                app:chipIconTint="@color/white" />

            <!-- Countdown Timer -->
            <LinearLayout
                android:id="@+id/layout_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:background="@drawable/bg_countdown"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_countdown_title"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 أيام، 12:30:45"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Event Title -->
                    <TextView
                        android:id="@+id/tv_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="حفل افتتاح كأس العالم 2026"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textColor="@color/on_background"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Event Type Badge -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_event_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="احتفال"
                        app:chipBackgroundColor="@color/primary_light"
                        app:chipCornerRadius="12dp"
                        app:chipIcon="@drawable/ic_celebration"
                        app:chipIconTint="@color/primary" />

                    <!-- Event Description -->
                    <TextView
                        android:id="@+id/tv_event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="حفل افتتاح مبهر لكأس العالم 2026 في الولايات المتحدة الأمريكية مع عروض موسيقية وثقافية متنوعة"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Event Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/event_details_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Date & Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event_date_time"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_event_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 يونيو 2026 - 8:00 مساءً"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_location"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event_location"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_event_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ملعب ميتلايف، نيويورك"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Venue -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_venue"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event_venue"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_event_venue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ملعب ميتلايف"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Capacity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_people"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event_capacity"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_event_capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="82,500 شخص"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Celebration Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_celebration_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/celebration_details_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Celebration Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_celebration"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/celebration_type"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_celebration_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="حفل افتتاح"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_time"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/celebration_duration"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_celebration_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 ساعات"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Activities -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celebration_activities"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_celebration_activities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="عروض موسيقية، عروض ثقافية، عرض ضوئي، مراسم رسمية"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/on_background"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Performers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/celebration_performers"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_celebration_performers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="بيونسيه، إيد شيران، شاكيرا، فرقة مارون 5"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/on_background"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Match Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_match_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/match_details_title"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Teams -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Home Team -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_home_team_flag"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/placeholder_flag" />

                            <TextView
                                android:id="@+id/tv_home_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="الأرجنتين"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- VS -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VS"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="16dp" />

                        <!-- Away Team -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/iv_away_team_flag"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/placeholder_flag" />

                            <TextView
                                android:id="@+id/tv_away_team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="فرنسا"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/on_background"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Match Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical">

                        <!-- Match Type -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_trophy"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/match_type"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/on_surface_variant"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_match_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="دور المجموعات"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textColor="@color/on_background"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Group -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_group"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/match_group"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/on_surface_variant"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_match_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="المجموعة A"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textColor="@color/on_background"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Referee -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_referee"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/match_referee"
                                    android:textAppearance="?attr/textAppearanceCaption"
                                    android:textColor="@color/on_surface_variant"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_match_referee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="بييرلويجي كولينا"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textColor="@color/on_background"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Map Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/event_location_map"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Map Container -->
                    <FrameLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_map_placeholder">

                        <!-- Google Map View -->
                        <com.google.android.gms.maps.MapView
                            android:id="@+id/map_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <!-- Map Placeholder (shown when map is loading) -->
                        <View
                            android:id="@+id/map_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_map_placeholder" />

                        <!-- Map Loading Indicator -->
                        <ProgressBar
                            android:id="@+id/map_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                    </FrameLayout>

                    <!-- Location Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/tv_map_location"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ملعب ميتلايف، نيويورك"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Open in Maps Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_maps"
                        style="@style/Widget.Material3.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/open_in_google_maps"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_google_maps"
                        app:iconTint="@color/primary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <!-- Share Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share"
                    style="@style/Widget.Material3.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/event_share"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@color/primary"
                    app:strokeColor="@color/primary" />

                <!-- Ticket Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tickets"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/event_tickets"
                    app:icon="@drawable/ic_ticket"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
