<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.admin.LandmarkDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_variant"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Landmark Image -->
            <ImageView
                android:id="@+id/image_landmark"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                tools:src="@drawable/ic_world_cup_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Landmark Name -->
                <TextView
                    android:id="@+id/text_landmark_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"
                    tools:text="برج خليفة" />

                <!-- Category -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/text_landmark_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:chipBackgroundColor="@color/secondary_variant"
                    android:textColor="@android:color/white"
                    tools:text="ناطحة سحاب" />

                <!-- Description Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الوصف"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary_variant"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_landmark_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingExtra="4dp"
                            tools:text="أطول مبنى في العالم وأحد أهم المعالم السياحية في دبي" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Location Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الموقع"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary_variant"
                            android:layout_marginBottom="12dp" />

                        <!-- Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/secondary_variant" />

                            <TextView
                                android:id="@+id/text_landmark_address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                tools:text="دبي، الإمارات العربية المتحدة" />

                        </LinearLayout>

                        <!-- Coordinates -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_gps"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/secondary_variant" />

                            <TextView
                                android:id="@+id/text_coordinates"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:fontFamily="monospace"
                                tools:text="25.1972, 55.2744" />

                        </LinearLayout>

                        <!-- Map Container -->
                        <FrameLayout
                            android:id="@+id/map_container"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@drawable/bg_map_placeholder">

                            <!-- Map Placeholder -->
                            <LinearLayout
                                android:id="@+id/map_placeholder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/bg_map_placeholder">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_google_maps"
                                    android:tint="@color/on_surface_variant" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="جاري تحميل الخريطة..."
                                    android:textSize="14sp"
                                    android:textColor="@color/on_surface_variant"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                            <!-- Map Loading -->
                            <ProgressBar
                                android:id="@+id/map_loading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />

                            <!-- Map View -->
                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone" />

                        </FrameLayout>

                        <!-- Open in Google Maps Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_open_maps"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="12dp"
                            android:text="فتح في خرائط جوجل"
                            android:textSize="14sp"
                            app:icon="@drawable/ic_google_maps"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Add Review Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="إضافة تقييم"
                    android:textSize="16sp"
                    android:padding="16dp"
                    app:backgroundTint="@color/secondary_variant"
                    app:icon="@android:drawable/ic_menu_add"
                    app:iconTint="@android:color/white" />

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="تعديل المعلم"
                    android:textColor="@color/secondary_variant"
                    app:strokeColor="@color/secondary_variant" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Open in Maps FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_open_in_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_map"
        android:contentDescription="فتح في خرائط جوجل"
        app:backgroundTint="@color/secondary_variant"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
