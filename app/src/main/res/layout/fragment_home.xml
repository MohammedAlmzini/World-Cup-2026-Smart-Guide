<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_home_modern_white"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">


        <!-- Gradient Background matching Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingTop="24dp"
            >

            <!-- Countdown Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العد التنازلي لكأس العالم"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/modern_blue_primary"
                android:gravity="center"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:layout_marginBottom="20dp" />

            <!-- Countdown Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Countdown Cards -->
                <LinearLayout
                    android:id="@+id/countdown_segment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <!-- Days Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:backgroundTint="@color/modern_blue_subtle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/countdown_days_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/modern_blue_primary"
                                tools:text="123" />

                            <TextView
                                android:id="@+id/countdown_days_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdown_days"
                                android:textSize="12sp"
                                android:textColor="@color/modern_blue_light"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Hours Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:backgroundTint="@color/modern_blue_subtle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/countdown_hours_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/modern_blue_primary"
                                tools:text="12" />

                            <TextView
                                android:id="@+id/countdown_hours_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdown_hours"
                                android:textSize="8sp"
                                android:textColor="@color/modern_blue_light"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Minutes Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:backgroundTint="@color/modern_blue_subtle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/countdown_minutes_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/modern_blue_primary"
                                tools:text="34" />

                            <TextView
                                android:id="@+id/countdown_minutes_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdown_minutes"
                                android:textSize="8sp"
                                android:textColor="@color/modern_blue_light"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Seconds Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_marginEnd="8dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/white"
                        android:backgroundTint="@color/modern_blue_subtle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/countdown_seconds_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/modern_blue_primary"
                                tools:text="56" />

                            <TextView
                                android:id="@+id/countdown_seconds_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/countdown_seconds"
                                android:textSize="8sp"
                                android:textColor="@color/modern_blue_light"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Event Started Message -->
                <TextView
                    android:id="@+id/countdown_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/world_cup_started"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_blue_primary"
                    android:background="@drawable/finished_badge_bg"
                    android:padding="16dp"
                    android:visibility="gone"
                    tools:text="World Cup 2026 has started!" />

            </FrameLayout>

        </LinearLayout>


        <!-- Banners Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent">

            <!-- Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/home_banners_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modern_blue_primary"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Banners RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/banners_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingStart="4dp"
                android:paddingEnd="16dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:orientation="horizontal" />

        </LinearLayout>

        <!-- Google Places Section (Tourist Attractions) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="الأماكن السياحية"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/modern_blue_primary"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_all_places"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عرض الكل"
                        android:textColor="@color/modern_blue_primary"
                        android:textSize="14sp"
                        app:backgroundTint="@color/modern_blue_soft"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        app:iconSize="16dp" />

                </LinearLayout>

                <!-- Places RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_places"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_google_place" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- Hotels Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:backgroundTint="@color/modern_blue_subtle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Hotels Header with View More Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/home_hotels_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/modern_blue_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_view_more_hotels"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="عرض المزيد"
                        android:textSize="12sp"
                        android:backgroundTint="@color/secondary_variant"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                </LinearLayout>

                <!-- Hotels RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hotels_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:scrollbars="none" />

                <!-- Hotels Loading Progress -->
                <ProgressBar
                    android:id="@+id/hotels_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="24dp"
                    android:visibility="gone" />

                <!-- Hotels Empty State -->
                <LinearLayout
                    android:id="@+id/hotels_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:alpha="0.5"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لا توجد فنادق متاحة حتى الآن"
                        android:textSize="14sp"
                        android:textColor="@color/text_hint"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Restaurants Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:backgroundTint="@color/modern_blue_subtle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header with View More Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/home_restaurants_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/modern_blue_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_view_more_restaurants"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="عرض المزيد"
                        android:textSize="12sp"
                        android:backgroundTint="@color/secondary_variant"
                        app:iconGravity="end"
                        app:iconSize="16dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/restaurants_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipToPadding="false"
                    android:scrollbars="none" />

                <!-- Restaurants Loading Progress -->
                <ProgressBar
                    android:id="@+id/restaurants_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="24dp"
                    android:visibility="gone" />

                <!-- Restaurants Empty State -->
                <LinearLayout
                    android:id="@+id/restaurants_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_restaurant"
                        android:alpha="0.3"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لا توجد مطاعم متاحة حتى الآن"
                        android:textSize="14sp"
                        android:textColor="@color/text_hint"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/white"
            android:backgroundTint="@color/modern_blue_subtle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/home_quick_info_title"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/modern_blue_primary" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        app:cardBackgroundColor="@color/primary_light">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مهم"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/modern_blue_primary"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Quick Info Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Currency Info -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/modern_blue_soft"
                            app:cardBackgroundColor="@color/white"
                            android:backgroundTint="@color/modern_blue_subtle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_currency"
                                    android:tint="@color/modern_blue_primary"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="العملة"
                                        android:textSize="12sp"
                                        android:textColor="@color/modern_blue_light" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="USD • CAD • MXN"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/modern_blue_primary" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Language Info -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/modern_blue_soft"
                            app:cardBackgroundColor="@color/white"
                            android:backgroundTint="@color/modern_blue_subtle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_language"
                                    android:tint="@color/modern_blue_primary"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="اللغات"
                                        android:textSize="12sp"
                                        android:textColor="@color/modern_blue_light" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EN • FR • ES"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/modern_blue_primary" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Weather Info -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/modern_blue_soft"
                            app:cardBackgroundColor="@color/white"
                            android:backgroundTint="@color/modern_blue_subtle">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_weather"
                                    android:tint="@color/modern_blue_primary"
                                    android:layout_marginEnd="12dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="الطقس"
                                        android:textSize="12sp"
                                        android:textColor="@color/modern_blue_light" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="21-35°C"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/modern_blue_primary" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Transport Info -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/modern_blue_soft"
                            app:cardBackgroundColor="@color/white"
                            android:backgroundTint="@color/modern_blue_subtle">

                            <LinearLayout
