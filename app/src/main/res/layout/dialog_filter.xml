<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_filter"
    android:padding="24dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_filter"
            android:tint="@color/primary"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/events_filter_title"
            android:textAppearance="?attr/textAppearanceHeadline2"
            android:textColor="?attr/colorOnSurface" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/action_close" />

    </LinearLayout>

    <!-- Filter Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Country Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_filter_country"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/country_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_usa"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الولايات المتحدة"
                        app:chipIcon="@drawable/ic_flag_usa" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_canada"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="كندا"
                        app:chipIcon="@drawable/ic_flag_canada" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_mexico"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="المكسيك"
                        app:chipIcon="@drawable/ic_flag_mexico" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Event Type Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_filter_type"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/type_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_matches"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="المباريات"
                        app:chipIcon="@drawable/ic_sports_soccer" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_ceremonies"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الاحتفالات"
                        app:chipIcon="@drawable/ic_celebration" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_events"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="فعاليات عامة"
                        app:chipIcon="@drawable/ic_events" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Date Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_filter_date"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/date_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_today"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اليوم"
                        app:chipIcon="@drawable/ic_today" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_this_week"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="هذا الأسبوع"
                        app:chipIcon="@drawable/ic_calendar" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_this_month"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="هذا الشهر"
                        app:chipIcon="@drawable/ic_calendar_month" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all_dates"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="جميع التواريخ"
                        app:chipIcon="@drawable/ic_all_dates" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Status Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events_filter_status"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/status_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_upcoming"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="قريباً"
                        app:chipIcon="@drawable/ic_schedule" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_live"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مباشر"
                        app:chipIcon="@drawable/ic_live" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_finished"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="منتهية"
                        app:chipIcon="@drawable/ic_check" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Dialog Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clear_filters"
            style="@style/Widget.Material3.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events_clear_filters"
            android:layout_marginEnd="12dp"
            app:icon="@drawable/ic_refresh" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_filters"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/events_apply_filters"
            app:icon="@drawable/ic_check" />

    </LinearLayout>

</LinearLayout>
