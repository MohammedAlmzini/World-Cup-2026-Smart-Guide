<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <!-- Section Header with modern styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Title with modern typography -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_banners_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium" />

        <!-- Modern indicator -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFF3E0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="جديد"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Horizontal RecyclerView Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <!-- Modern horizontal RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/banners_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingStart="4dp"
            android:paddingEnd="16dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="32dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Gradient fade edge at the end -->
        <View
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/bg_horizontal_fade_edge"
            android:clickable="false"
            android:focusable="false" />

    </FrameLayout>

</LinearLayout>
