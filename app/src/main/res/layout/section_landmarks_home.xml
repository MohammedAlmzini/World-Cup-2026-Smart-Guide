<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/landmarks_section"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="أهم المعالم السياحية"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_more"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="عرض المزيد"
            android:textSize="12sp"
            android:backgroundTint="@color/secondary_variant"
            app:iconGravity="end"
            app:iconSize="16dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

    </LinearLayout>

    <!-- First Row - 2 Landmarks -->
    <LinearLayout
        android:id="@+id/section_landmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Landmark 1 -->
            <include
                android:id="@+id/card_landmark_1"
                layout="@layout/item_landmark_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp" />

            <!-- Landmark 2 -->
            <include
                android:id="@+id/card_landmark_2"
                layout="@layout/item_landmark_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- Second Row - 2 Landmarks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Landmark 3 -->
            <include
                android:id="@+id/card_landmark_3"
                layout="@layout/item_landmark_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp" />

            <!-- Landmark 4 -->
            <include
                android:id="@+id/card_landmark_4"
                layout="@layout/item_landmark_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading State -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:alpha="0.5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا توجد معالم سياحية حتى الآن"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
