<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_hotel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Hotel Image -->
        <ImageView
            android:id="@+id/iv_hotel_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hotel_placeholder"
            app:cornerRadius="12dp" />

        <!-- Hotel Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اسم الفندق"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_hotel_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المدينة, الدولة"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                app:drawableStartCompat="@drawable/ic_location"
                android:drawablePadding="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_hotel_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    app:drawableStartCompat="@drawable/ic_star"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tv_hotel_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مفتوح"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#E8F5E8"
                    android:padding="6dp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/tv_hotel_rooms_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 غرفة"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#F5F5F5"
                    android:padding="6dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_hotel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:cornerRadius="20dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_hotel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconTint="@color/error"
                app:strokeColor="@color/error"
                app:cornerRadius="20dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
